{
  "dataloader": {
    "tools": {
      "tokenizer,keep_tokens,vocab_size": {
        "type": "tokenizers",
        "class": "BertTokenizer",
        "vocab_path": "../state_dict/ernie-1.0/vocab.txt",
        "simplified": true,
        "max_length": 512
      }
    },
    "loaders": {
      "train_dataloader": {
        "type": "BasicDataLoader",
        "inputs": [
          {
            "feed_dict": {
              "anchor": "first_text"
            },
            "type": "BasicTextInput",
            "config": {
              "need_tool": "tokenizer"
            },
            "fetch_dict": {
              "input_ids": "input_ids"
            }
          },
          {
            "feed_dict": {
              "pos": "first_text"
            },
            "type": "BasicTextInput",
            "config": {
              "need_tool": "tokenizer"
            },
            "fetch_dict": {
              "input_ids": "second_input_ids"
            }
          },
          {
            "feed_dict": {
              "neg": "first_text"
            },
            "type": "BasicTextInput",
            "config": {
              "need_tool": "tokenizer"
            },
            "fetch_dict": {
              "input_ids": "third_input_ids"
            }
          }
        ],
        "config": {
          "data_dir": "../dataset/text_similarity/feed_audit_data/feed_audit_data_pairwise_train_sample.txt",
          "encoding": "utf-8",
          "header": true,
          "sampler": null,
          "shuffle": true,
          "batch_size": 64
        }
      },
      "eval_dataloader": {
        "type": "BasicDataLoader",
        "inputs": [
          {
            "feed_dict": {
              "text_a": "first_text"
            },
            "type": "BasicTextInput",
            "config": {
              "need_tool": "tokenizer"
            },
            "fetch_dict": {
              "input_ids": "input_ids"
            }
          },
          {
            "feed_dict": {
              "text_b": "first_text"
            },
            "type": "BasicTextInput",
            "config": {
              "need_tool": "tokenizer"
            },
            "fetch_dict": {
              "input_ids": "second_input_ids"
            }
          },
          {
            "feed_dict": {
              "label": "label"
            },
            "type": "ScalarInput",
            "config": {
              "need_tool": []
            },
            "fetch_dict": {
              "labels": "labels"
            }
          }
        ],
        "config": {
          "data_dir": "../dataset/text_similarity/feed_audit_data/feed_audit_data_pairwise_eval_pointwise.txt",
          "encoding": "utf-8",
          "header": true,
          "sampler": null,
          "shuffle": false,
          "batch_size": 64
        }
      },
      "infer_dataloader": {
        "type": "BasicDataLoader",
        "inputs": [
          {
            "feed_dict": {
              "0": "first_text"
            },
            "type": "BasicTextInput",
            "config": {
              "need_tool": "tokenizer"
            },
            "fetch_dict": {
              "input_ids": "input_ids"
            }
          },
          {
            "feed_dict": {
              "1": "first_text"
            },
            "type": "BasicTextInput",
            "config": {
              "need_tool": "tokenizer",
              "min_seq_len": 7,
              "pad_idx": 0
            },
            "fetch_dict": {
              "input_ids": "second_input_ids"
            }
          }
        ],
        "config": {
          "data_dir": "../dataset/text_similarity/feed_audit_data/feed_audit_data_pairwise_infer.txt",
          "encoding": "utf-8",
          "header": false,
          "sampler": null,
          "shuffle": false,
          "batch_size": 64
        }
      }
    }
  },
  "model": {
    "type": "TextCNNSimilarity",
    "build_config": {
      "vocab_size": "auto",
      "emb_dim": 128,
      "num_filters": 64,
      "num_channels": 1,
      "win_size_list": [3, 7],
      "output_dim": 128,
      "emb_sparse": false,
      "label_smooth_ratio": null,
      "margin": 0.6
    }
  },
  "run_config": {
    "model_save_path": "./output/textcnn_similarity",
    "best_model_save_path": "./output/textcnn_similarity_best",
    "train": {
      "enable": false,
      "epochs": 20,
      "print_step": 20,
      "load_best_model": true,
      "scheduler_mode": "cosine",
      "warm_up": 0.1,
      "swa": false,
      "swa_start_epoch": 5,
      "swa_anneal_epoch": 3,
      "learning_rate": 1e-2,
      "swa_lr": 1e-4,
      "adversarial_training": false
    },
    "eval": {
      "enable": true,
      "print_step": 200
    },
    "infer": {
      "enable": false,
      "print_step": 200,
      "fetch_list": ["sent_vec", "second_sim"],
      "confidence": 0.5,
      "infer_res_path": "./output/textcnn_similarity_infer_res"
    }
  }
}
